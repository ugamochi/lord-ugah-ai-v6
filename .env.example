# Lord-Ugah-AI Environment Variables Example
# Copy this file to .env and fill in your values

# Application Settings
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# File System
UGAHBASE_ROOT_DIR=./ugahbases
TEMPLATE_DIR=./templates
ARCHIVE_DIR=./archive

# Git Configuration
GIT_AUTO_SYNC=false
GIT_SYNC_INTERVAL=300
GIT_BRANCH=main

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
PERFORMANCE_LOG_FILE=./logs/performance.log

# Cross-referencing
ENABLE_CROSS_REFERENCES=true
CROSS_REF_MAP_FILE=./meta/cross-reference-map.md

# Optional: External Services Integration
# Uncomment and fill these if you plan to use external services
# API_KEY=your_api_key_here
# EXTERNAL_SERVICE_URL=https://api.example.com/v1